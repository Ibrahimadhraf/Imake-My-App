<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout">
<android.support.constraint.ConstraintLayout
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="5dp"
                                             android:background="@drawable/productviewbackgrounf">
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp" android:layout_height="40dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:src="@drawable/photo"
                                                  android:layout_marginEnd="32dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:id="@+id/circleImageView" android:layout_marginTop="8dp"
                                                  app:layout_constraintStart_toEndOf="@+id/textView4"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circleImageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.53" android:layout_marginStart="32dp"/>
</android.support.constraint.ConstraintLayout>
</layout>